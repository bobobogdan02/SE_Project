@model GymProject.ViewModel.Administrator.AdministratorViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a class="btn btn-primary" asp-action="Create">New Role</a>
<a class="btn btn-primary" asp-action="CreateUser">New Employee</a>
<div class="col-sm-12">
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Roles</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <th>@employee.Email</th>
                <th>
                    <span>
                        @{ var role = await userManager.GetRolesAsync(employee);
                            <a>@role[0]</a>
                        }
                    </span>
                    </th>

                </tr>
                            }
    </tbody>
</table>
    </div>



