@model GymProject.ViewModel.Class.ClassViewModel

@{
    ViewData["Title"] = "Edit";
}

    <style>
        .form-group {
            margin-left: 50px;
        }

        body {
            background-color: lightgray
        }
    </style>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClassName" class="control-label"></label>
                <input asp-for="ClassName" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="HourClass" class="control-label"></label>
                <input asp-for="HourClass" class="form-control" />
               
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: crimson; margin-left: 50px;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
